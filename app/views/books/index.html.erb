<div class="book-wrap">
 
<h1>Books</h1>

<p>Title</p>
<P>Body</P>

 <% @books.each do |f| %>
　<p><%= f.title %></p>
  <p><%= f.body %></p>
  <%= link_to "Show", book_path(f) %>
  <%= link_to "Edit", edit_book_path(f) %>
  <%= link_to "Destroy", destroy_book_path(f), method: :delete, data: {confirm: "本当に削除しますか？"} %>
 <% end %>
 
 <h2>New book</h2>
 
 <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>
 
 <%= form_with model: @book do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %>
　